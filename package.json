{
  "name": "twitch-jonobotti",
  "version": "1.0.0",
  "description": "Twitch jonobotti + OBS overlay + Desktop admin (Electron)",
  "license": "ISC",
  "type": "commonjs",

  "main": "electron/main.js",

  "scripts": {
    "dev:desktop": "electron .",
    "build:win": "electron-builder --win"
  },

  "dependencies": {
    "express": "^5.2.1",
    "tmi.js": "^1.8.5",
    "ws": "^8.19.0"
  },

  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "wait-on": "^9.0.4"
  },

  "build": {
    "appId": "com.twitch.jonobotti",
    "productName": "Twitch Jonobotti",

    "files": [
      "bot.js",
      "electron/**",
      "package.json"
    ],

    "extraResources": [
      {
        "from": "overlay",
        "to": "overlay"
      },
      {
        "from": "bot-token.txt",
        "to": "bot-token.txt"
      }
    ],

    "win": {
      "target": "nsis"
    }
  }

}
